{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2023",
        "strict": true,
        "esModuleInterop": true,
        "ignoreDeprecations": "5.0",
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "#captain/*": ["./*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
