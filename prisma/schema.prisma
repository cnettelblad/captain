generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Birthday {
  id     Int    @id @default(autoincrement())
  userId String @unique
  month  Int    // 1-12
  day    Int    // 1-31
}

model UserEncounter {
  id        Int      @id @default(autoincrement())
  userA     String
  userB     String
  createdBy String
  status    String   @default("pending") // pending, confirmed, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userA, userB])
}
